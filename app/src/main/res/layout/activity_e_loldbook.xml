<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3551"
    android:orientation="vertical"
    tools:context=".ELoldbook">

    <androidx.cardview.widget.CardView
        android:layout_width="374dp"
        android:layout_height="177dp"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        app:cardCornerRadius="18dp"
        app:cardElevation="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_image_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:text="Book Name:"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:text="book_name_"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4A494A"
        android:layout_margin="2dp">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:text="Writer Name:"
        android:textColor="#ffffff"
        android:textSize="20sp" />
        <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
            android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:text="writer_name_"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4A494A"
        android:layout_margin="2dp">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="Price:"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="price"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Pages:"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:textColor="#ffffff"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:gravity="center"
            android:text="pages"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
             />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4A494A"
        android:layout_margin="2dp">
    </View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:text="Publisher Name:"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:text="publisher_name_"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4A494A"
        android:layout_margin="2dp">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Contact:"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:hint="1123456789"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_baseline_call_24"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4A494A"
        android:layout_margin="2dp">
    </View>
    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:layout_gravity="center"
        android:text="pay Online"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />


</LinearLayout>